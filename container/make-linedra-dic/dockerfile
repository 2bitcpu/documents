FROM rust:latest

# 必要パッケージのみインストール
RUN apt-get update && apt-get install -y \
    build-essential \
    mecab \
    libmecab-dev \
    mecab-utils \
    git \
    wget \
    curl \
    unzip \
    xz-utils \
    ca-certificates \
    file \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /work

# Rust のツールチェインは最新
RUN cargo install lindera-cli

# 作業用ボリューム（辞書出力用）
VOLUME /work

# 起動時は bash で待機
CMD ["/bin/bash"]
