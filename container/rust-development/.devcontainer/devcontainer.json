{
  "name": "Rust Development Container",
  "dockerComposeFile": "compose.yml",
  "service": "rust-development",
  "postStartCommand": "bash",
  "workspaceFolder": "/home/rustacean/workspace",
  "remoteUser": "rustacean",
  "updateRemoteUserUID": false,

  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer"  // Rust Analyzer: Rust Language Server
      ]
    }
  }
}
